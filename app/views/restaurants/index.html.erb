<h1>Restaurants</h1>
<% @restaurants.each do |element|  %>
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= link_to element.name, restaurant_path(element) %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= element.phone_number %></h6>
    <p class="card-text"><%= element.address %></p>
    <hr>
  </div>
</div>
<% end %>
